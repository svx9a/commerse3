{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .contact-cta-{{ section.id }} {
    background: rgb(var(--color-base-background-1));
    position: relative;
    overflow: hidden;
  }

  .contact-cta-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(var(--color-base-text), 0.02) 0%,
      transparent 50%,
      rgba(var(--color-base-text), 0.02) 100%
    );
    pointer-events: none;
  }

  .contact-cta-{{ section.id }} .contact-cta__container {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 80rem;
    margin: 0 auto;
  }

  .contact-cta-{{ section.id }} .contact-cta__title {
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 700;
    margin-bottom: 2rem;
    color: rgb(var(--color-base-text));
    line-height: 1.1;
  }

  .contact-cta-{{ section.id }} .contact-cta__subtitle {
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    color: rgba(var(--color-base-text), 0.8);
    margin-bottom: 3rem;
    line-height: 1.5;
    max-width: 60rem;
    margin-left: auto;
    margin-right: auto;
  }

  .contact-cta-{{ section.id }} .contact-cta__buttons {
    display: flex;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 4rem;
  }

  .contact-cta-{{ section.id }} .contact-cta__button {
    display: inline-flex;
    align-items: center;
    padding: 1.2rem 2.5rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    overflow: hidden;
  }

  .contact-cta-{{ section.id }} .contact-cta__button--primary {
    background: rgb(var(--color-base-text));
    color: rgb(var(--color-base-background-1));
    border: 2px solid rgb(var(--color-base-text));
  }

  .contact-cta-{{ section.id }} .contact-cta__button--primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(var(--color-base-background-1), 0.1);
    transition: left 0.3s ease;
  }

  .contact-cta-{{ section.id }} .contact-cta__button--primary:hover::before {
    left: 100%;
  }

  .contact-cta-{{ section.id }} .contact-cta__button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(var(--color-base-text), 0.3);
  }

  .contact-cta-{{ section.id }} .contact-cta__button--secondary {
    background: transparent;
    color: rgb(var(--color-base-text));
    border: 2px solid rgba(var(--color-base-text), 0.3);
  }

  .contact-cta-{{ section.id }} .contact-cta__button--secondary:hover {
    background: rgba(var(--color-base-text), 0.05);
    border-color: rgb(var(--color-base-text));
    transform: translateY(-2px);
  }

  .contact-cta-{{ section.id }} .contact-cta__form {
    max-width: 50rem;
    margin: 0 auto;
    background: rgba(var(--color-base-text), 0.02);
    border: 1px solid rgba(var(--color-base-text), 0.1);
    border-radius: 1rem;
    padding: 3rem;
  }

  .contact-cta-{{ section.id }} .contact-cta__form-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: rgb(var(--color-base-text));
    text-align: center;
  }

  .contact-cta-{{ section.id }} .contact-form {
    display: grid;
    gap: 1.5rem;
  }

  .contact-cta-{{ section.id }} .contact-form__row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .contact-cta-{{ section.id }} .contact-form__field {
    display: flex;
    flex-direction: column;
  }

  .contact-cta-{{ section.id }} .contact-form__label {
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: rgb(var(--color-base-text));
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .contact-cta-{{ section.id }} .contact-form__input,
  .contact-cta-{{ section.id }} .contact-form__textarea {
    padding: 1rem;
    border: 1px solid rgba(var(--color-base-text), 0.2);
    border-radius: 0.5rem;
    background: rgb(var(--color-base-background-1));
    color: rgb(var(--color-base-text));
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  .contact-cta-{{ section.id }} .contact-form__input:focus,
  .contact-cta-{{ section.id }} .contact-form__textarea:focus {
    outline: none;
    border-color: rgb(var(--color-base-text));
  }

  .contact-cta-{{ section.id }} .contact-form__textarea {
    min-height: 120px;
    resize: vertical;
  }

  .contact-cta-{{ section.id }} .contact-form__submit {
    padding: 1.2rem 2rem;
    background: rgb(var(--color-base-text));
    color: rgb(var(--color-base-background-1));
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s ease;
    justify-self: center;
    min-width: 200px;
  }

  .contact-cta-{{ section.id }} .contact-form__submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(var(--color-base-text), 0.3);
  }

  .contact-cta-{{ section.id }} .contact-cta__info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
    padding-top: 4rem;
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
  }

  .contact-cta-{{ section.id }} .contact-info__item {
    text-align: center;
  }

  .contact-cta-{{ section.id }} .contact-info__icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto 1rem;
    background: rgba(var(--color-base-text), 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
  }

  .contact-cta-{{ section.id }} .contact-info__title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: rgb(var(--color-base-text));
  }

  .contact-cta-{{ section.id }} .contact-info__text {
    color: rgba(var(--color-base-text), 0.7);
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .contact-cta-{{ section.id }} .contact-cta__buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .contact-cta-{{ section.id }} .contact-cta__button {
      width: 100%;
      justify-content: center;
    }

    .contact-cta-{{ section.id }} .contact-cta__form {
      padding: 2rem;
    }

    .contact-cta-{{ section.id }} .contact-form__row {
      grid-template-columns: 1fr;
    }

    .contact-cta-{{ section.id }} .contact-cta__info {
      grid-template-columns: 1fr;
      margin-top: 3rem;
      padding-top: 3rem;
    }
  }
{%- endstyle -%}

<div class="contact-cta-{{ section.id }} color-{{ section.settings.section_color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="contact-cta__container">
      {%- if section.settings.title != blank -%}
        <h2 class="contact-cta__title inline-richtext">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}

      {%- if section.settings.subtitle != blank -%}
        <div class="contact-cta__subtitle rte">
          {{ section.settings.subtitle }}
        </div>
      {%- endif -%}

      {%- if section.settings.primary_button_label != blank or section.settings.secondary_button_label != blank -%}
        <div class="contact-cta__buttons">
          {%- if section.settings.primary_button_label != blank -%}
            <a href="{{ section.settings.primary_button_url | default: '#contact-form' }}" class="contact-cta__button contact-cta__button--primary">
              {{ section.settings.primary_button_label | escape }}
            </a>
          {%- endif -%}
          {%- if section.settings.secondary_button_label != blank -%}
            <a href="{{ section.settings.secondary_button_url }}" class="contact-cta__button contact-cta__button--secondary">
              {{ section.settings.secondary_button_label | escape }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- if section.settings.show_form -%}
        <div class="contact-cta__form" id="contact-form">
          <h3 class="contact-cta__form-title">{{ section.settings.form_title | default: 'Get in Touch' | escape }}</h3>
          
          {% form 'contact' %}
            <div class="contact-form">
              <div class="contact-form__row">
                <div class="contact-form__field">
                  <label for="ContactForm-name" class="contact-form__label">Name *</label>
                  <input
                    class="contact-form__input"
                    autocomplete="name"
                    type="text"
                    id="ContactForm-name"
                    name="contact[name]"
                    value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                    placeholder="Your name"
                    required
                  >
                </div>
                <div class="contact-form__field">
                  <label for="ContactForm-email" class="contact-form__label">Email *</label>
                  <input
                    autocomplete="email"
                    type="email"
                    id="ContactForm-email"
                    class="contact-form__input"
                    name="contact[email]"
                    spellcheck="false"
                    autocapitalize="off"
                    value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                    aria-required="true"
                    placeholder="your@email.com"
                    required
                  >
                </div>
              </div>
              
              <div class="contact-form__field">
                <label for="ContactForm-phone" class="contact-form__label">Phone</label>
                <input
                  type="tel"
                  id="ContactForm-phone"
                  class="contact-form__input"
                  autocomplete="tel"
                  name="contact[phone]"
                  pattern="[0-9\-]*"
                  value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                  placeholder="+1 (555) 123-4567"
                >
              </div>
              
              <div class="contact-form__field">
                <label for="ContactForm-body" class="contact-form__label">Message *</label>
                <textarea
                  rows="6"
                  id="ContactForm-body"
                  class="contact-form__textarea"
                  name="contact[body]"
                  placeholder="Tell us about your project..."
                  required
                >
                  {%- if form.body -%}{{ form.body }}{%- endif -%}
                </textarea>
              </div>
              
              <button type="submit" class="contact-form__submit">
                Send Message
              </button>
            </div>
          {% endform %}
        </div>
      {%- endif -%}

      {%- assign info_blocks = section.blocks | where: 'type', 'contact_info' -%}
      {%- if info_blocks.size > 0 -%}
        <div class="contact-cta__info">
          {%- for block in info_blocks -%}
            <div class="contact-info__item" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="contact-info__icon">
                  {{ block.settings.icon }}
                </div>
              {%- endif -%}
              {%- if block.settings.title != blank -%}
                <h4 class="contact-info__title">
                  {{ block.settings.title | escape }}
                </h4>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="contact-info__text">
                  {{ block.settings.text | escape }}
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

