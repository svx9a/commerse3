{%- style -%}
  .footer-{{ section.id }} {
    background: rgb(var(--color-base-background-2));
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
  }

  .footer-{{ section.id }} .footer__content {
    padding: 4rem 0 2rem;
  }

  .footer-{{ section.id }} .footer__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-{{ section.id }} .footer__column {
    display: flex;
    flex-direction: column;
  }

  .footer-{{ section.id }} .footer__logo {
    margin-bottom: 1.5rem;
  }

  .footer-{{ section.id }} .footer__logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(var(--color-base-text));
    text-decoration: none;
  }

  .footer-{{ section.id }} .footer__description {
    color: rgba(var(--color-base-text), 0.7);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .footer-{{ section.id }} .footer__title {
    font-size: 1.1rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-{{ section.id }} .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-{{ section.id }} .footer__list-item {
    margin-bottom: 0.8rem;
  }

  .footer-{{ section.id }} .footer__link {
    color: rgba(var(--color-base-text), 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .footer-{{ section.id }} .footer__link:hover {
    color: rgb(var(--color-base-text));
  }

  .footer-{{ section.id }} .footer__contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-{{ section.id }} .footer__contact-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    color: rgba(var(--color-base-text), 0.7);
    font-size: 0.95rem;
  }

  .footer-{{ section.id }} .footer__contact-icon {
    width: 1.2rem;
    height: 1.2rem;
    flex-shrink: 0;
  }

  .footer-{{ section.id }} .footer__social {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .footer-{{ section.id }} .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(var(--color-base-text), 0.1);
    border-radius: 50%;
    color: rgba(var(--color-base-text), 0.7);
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 1.1rem;
  }

  .footer-{{ section.id }} .footer__social-link:hover {
    background: rgba(var(--color-base-text), 0.2);
    color: rgb(var(--color-base-text));
    transform: translateY(-2px);
  }

  .footer-{{ section.id }} .footer__newsletter {
    background: rgba(var(--color-base-text), 0.02);
    border: 1px solid rgba(var(--color-base-text), 0.1);
    border-radius: 0.5rem;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .footer-{{ section.id }} .footer__newsletter-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin-bottom: 0.5rem;
  }

  .footer-{{ section.id }} .footer__newsletter-text {
    color: rgba(var(--color-base-text), 0.7);
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  .footer-{{ section.id }} .footer__newsletter-form {
    display: flex;
    gap: 0.5rem;
  }

  .footer-{{ section.id }} .footer__newsletter-input {
    flex: 1;
    padding: 0.8rem;
    border: 1px solid rgba(var(--color-base-text), 0.2);
    border-radius: 0.25rem;
    background: rgb(var(--color-base-background-1));
    color: rgb(var(--color-base-text));
    font-size: 0.9rem;
  }

  .footer-{{ section.id }} .footer__newsletter-input:focus {
    outline: none;
    border-color: rgb(var(--color-base-text));
  }

  .footer-{{ section.id }} .footer__newsletter-button {
    padding: 0.8rem 1.5rem;
    background: rgb(var(--color-base-text));
    color: rgb(var(--color-base-background-1));
    border: none;
    border-radius: 0.25rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .footer-{{ section.id }} .footer__newsletter-button:hover {
    background: rgba(var(--color-base-text), 0.8);
  }

  .footer-{{ section.id }} .footer__bottom {
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
    padding: 2rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-{{ section.id }} .footer__copyright {
    color: rgba(var(--color-base-text), 0.6);
    font-size: 0.85rem;
  }

  .footer-{{ section.id }} .footer__payment-icons {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .footer-{{ section.id }} .footer__payment-icon {
    height: 1.5rem;
    width: auto;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .footer-{{ section.id }} .footer__payment-icon:hover {
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .footer-{{ section.id }} .footer__content {
      padding: 3rem 0 1.5rem;
    }

    .footer-{{ section.id }} .footer__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .footer-{{ section.id }} .footer__newsletter-form {
      flex-direction: column;
    }

    .footer-{{ section.id }} .footer__bottom {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem 0;
    }

    .footer-{{ section.id }} .footer__social {
      justify-content: center;
    }
  }
{%- endstyle -%}

<footer class="footer-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="footer__content">
      <div class="footer__grid">
        {%- comment -%} Company Info Column {%- endcomment -%}
        <div class="footer__column">
          <div class="footer__logo">
            {%- if section.settings.logo != blank -%}
              <img
                src="{{ section.settings.logo | image_url: width: 150 }}"
                alt="{{ shop.name | escape }}"
                width="{{ section.settings.logo.width }}"
                height="{{ section.settings.logo.height }}"
                loading="lazy"
              >
            {%- else -%}
              <a href="{{ routes.root_url }}" class="footer__logo-text">
                {{ shop.name }}
              </a>
            {%- endif -%}
          </div>
          
          {%- if section.settings.description != blank -%}
            <div class="footer__description rte">
              {{ section.settings.description }}
            </div>
          {%- endif -%}

          {%- if section.settings.show_social -%}
            <div class="footer__social">
              {%- if settings.social_facebook_link != blank -%}
                <a href="{{ settings.social_facebook_link }}" class="footer__social-link" aria-label="Facebook">
                  üìò
                </a>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
                <a href="{{ settings.social_instagram_link }}" class="footer__social-link" aria-label="Instagram">
                  üì∑
                </a>
              {%- endif -%}
              {%- if settings.social_twitter_link != blank -%}
                <a href="{{ settings.social_twitter_link }}" class="footer__social-link" aria-label="Twitter">
                  üê¶
                </a>
              {%- endif -%}
              {%- if settings.social_linkedin_link != blank -%}
                <a href="{{ settings.social_linkedin_link }}" class="footer__social-link" aria-label="LinkedIn">
                  üíº
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} Dynamic Menu Columns {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'link_list' -%}
              <div class="footer__column" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__title">
                    {{ block.settings.heading | escape }}
                  </h3>
                {%- endif -%}
                
                {%- if block.settings.menu != blank -%}
                  <ul class="footer__list">
                    {%- for link in linklists[block.settings.menu].links -%}
                      <li class="footer__list-item">
                        <a href="{{ link.url }}" class="footer__link">
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>

            {%- when 'contact_info' -%}
              <div class="footer__column" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__title">
                    {{ block.settings.heading | escape }}
                  </h3>
                {%- endif -%}
                
                <div class="footer__contact-info">
                  {%- if block.settings.address != blank -%}
                    <div class="footer__contact-item">
                      <span class="footer__contact-icon">üìç</span>
                      <span>{{ block.settings.address | escape }}</span>
                    </div>
                  {%- endif -%}
                  
                  {%- if block.settings.phone != blank -%}
                    <div class="footer__contact-item">
                      <span class="footer__contact-icon">üìû</span>
                      <a href="tel:{{ block.settings.phone | escape }}" class="footer__link">
                        {{ block.settings.phone | escape }}
                      </a>
                    </div>
                  {%- endif -%}
                  
                  {%- if block.settings.email != blank -%}
                    <div class="footer__contact-item">
                      <span class="footer__contact-icon">üìß</span>
                      <a href="mailto:{{ block.settings.email | escape }}" class="footer__link">
                        {{ block.settings.email | escape }}
                      </a>
                    </div>
                  {%- endif -%}
                </div>
              </div>

            {%- when 'newsletter' -%}
              <div class="footer__column" {{ block.shopify_attributes }}>
                <div class="footer__newsletter">
                  {%- if block.settings.heading != blank -%}
                    <h3 class="footer__newsletter-title">
                      {{ block.settings.heading | escape }}
                    </h3>
                  {%- endif -%}
                  
                  {%- if block.settings.text != blank -%}
                    <div class="footer__newsletter-text">
                      {{ block.settings.text | escape }}
                    </div>
                  {%- endif -%}
                  
                  {% form 'customer' %}
                    <div class="footer__newsletter-form">
                      <input
                        type="email"
                        name="contact[email]"
                        class="footer__newsletter-input"
                        placeholder="{{ block.settings.placeholder | default: 'Enter your email' | escape }}"
                        required
                      >
                      <button type="submit" class="footer__newsletter-button">
                        {{ block.settings.button_text | default: 'Subscribe' | escape }}
                      </button>
                    </div>
                  {% endform %}
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>

      <div class="footer__bottom">
        <div class="footer__copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name | escape }}. All rights reserved.</p>
        </div>
        
        {%- if section.settings.show_payment_icons -%}
          <div class="footer__payment-icons">
            {%- for type in shop.enabled_payment_types -%}
              {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

